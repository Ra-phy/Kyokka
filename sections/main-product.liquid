<section>

  <div class="py-20 px-10 w-[90vw] mx-auto">
    <div class="flex gap-30 items-start">

      <div class="w-11/20 hidden md:block">
        {% for media in product.media %}
          <div>
            {% case media.media_type %}
              {% when "image" %}
                <img
                  src="{{ media |  image_url: width: 900 }}"
                  alt=""
                  height=""
                  width=""
                  class="h-200">
                {% else %}

            {% endcase %}
          </div>
        {% endfor %}
      </div>
      <div class="md:hidden">mobile view</div>


      <div class="w-9/20 sticky top-5">

        {% form 'product'
          , product %}

          <input
            type="hidden"
            name="id"
            value="{{ product.selected_or_first_available_variant.id }}"
            id="">

          <div class="header-font text-6xl">{{ product.title }}</div>
          <div>
            <div>
              <span class="text-xl">{{ product.vendor }}</span>
            </div>
            <div class="my-8 text-4xl font-semibold header-font">
              <span class="space-x-3 line-through">{{ product.selected_or_first_available_variant.compare_at_price | money }}</span>
              <span>{{ product.selected_or_first_available_variant.price | money }}</span>
            </div>
          </div>


          <div>variant</div>
          <div class="product-info space-y-8">
            {% for block in section.blocks %}
               {% render block %}
            {% endfor %}
          </div>


          <div class="my-5 inline-block">

            <div class="flex justify-center items-center px-5 py-5 border border-gray-300 rounded-md overflow-hidden">
              <div class="flex items-center px-2 py-1  cursor-pointer">
                {% render "icon-minus" %}
              </div>

              <input
                class="w-30 border-none focus:outline-none rounded-md text-center"
                type="number"
                value="1"
                min="1">

              <div class="flex items-center px-2 py-1  cursor-pointer ">
                {% render "icon-plus" %}
              </div>
            </div>
          </div>

          <div>
            <button href="#" class="mt-10 inline-block w-full mb-5 text-center border-2 border-[var(--btn-primary)] text-[var(--btn-primary)] hover:border-[var(--btn-primary-hover)] btn-solid">
              {% if product.selected_or_first_available_variant == false %}
                disabled
              {% endif %}
              {% if product.selected_or_first_available_variant == false %}
                Sold out
              {% else %}
                Add to cart
              {% endif %}
            </button>
          </div>
          <div>
            <a href="#" class="inline-block w-full text-center text-white rounded-lg product-card bg-[var(--btn-primary)] hover:bg-[var(--btn-primary-hover)] active:bg-[var(--btn-primary-active)]  duration-300 btn-solid">Checkout</a>
          </div>

        {% endform %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Product",
    "blocks": [
      {
        "type": "@app"
      }
    ],
    "settings": []
  }
{% endschema %}